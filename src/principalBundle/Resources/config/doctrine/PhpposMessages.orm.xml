<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="principalBundle\Entity\PhpposMessages" table="phppos_messages">
    <indexes>
      <index name="phppos_messages_ibfk_1" columns="sender_id"/>
      <index name="phppos_messages_key_1" columns="deleted,created_at,id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="message" type="text" column="message" length="65535" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="createdAt" type="datetime" column="created_at" nullable="false">
      <options>
        <option name="default">CURRENT_TIMESTAMP</option>
      </options>
    </field>
    <field name="deleted" type="integer" column="deleted" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <many-to-one field="sender" target-entity="PhpposEmployees" fetch="LAZY">
      <join-columns>
        <join-column name="sender_id" referenced-column-name="person_id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
